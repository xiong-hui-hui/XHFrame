<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:layout_marginTop="50dp"
            android:background="@color/line_color" />



        <com.xiong.tuan.ui.customerview.ClearableEditText
                android:id="@+id/edtPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_login_phone"
                android:drawablePadding="19dp"
                android:drawableRight="@drawable/ic_cha"
                android:hint="请输入11位手机号"
                android:inputType="phone"
                tools:text="18721253206"
                android:textColorHint="@color/gray_cc"
                android:textSize="16sp"
                android:maxLength="11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:background="@color/line_color" />



        <com.xiong.tuan.ui.customerview.ClearableEditText
                android:id="@+id/edtPasswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_login_passwd"
                android:drawablePadding="19dp"
                android:drawableRight="@drawable/ic_cha"
                android:hint="请输入密码"
                android:inputType="textPassword"
                tools:text="123456"
                android:textColorHint="@color/gray_cc"
                android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/tvForgetPasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:clickable="true"
            android:gravity="right"
            android:text="忘记密码？"
            android:textColor="@color/blue_33ccff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:layout_marginTop="82dp"
            android:background="@drawable/btn_login_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:layout_marginTop="@dimen/paddingLeft"
            android:background="@drawable/btn_register_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="注册"
            android:textColor="@color/blue_33ccff"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>